<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="com.web.www.repository.HotelDAO">
  
  	<insert id="updateRoomInfo">
		INSERT INTO room_info 
		VALUES (#{hotelRoomNum},#{hotelReserveStayStart} ,#{hotelReserveStayEnd},
		'N',#{hotelReserveFee},#{hotelReservePeople},#{hotelReserveChild},"",
		now(),now()+7);
		
	</insert>
  	<insert id="addRoom">
		INSERT INTO room (hotel_room_name, hotel_room_explain,hotel_room_standard_people,
		hotel_room_type,hotel_room_area,hotel_room_fee,hotel_room_count)
		VALUES (#{hotelRoomName},#{hotelRoomExplain} ,#{hotelRoomStandardPeople},
		#{hotelRoomType},#{hotelRoomArea},#{hotelRoomFee},#{hotelRoomCount}
		);
		
	</insert>
	<select id="getRoomList" resultType="com.web.www.domain.hotel.RoomVO">
		select * from room
	</select>
  </mapper>